@page 
@model FribergCarRentalsRazorPageEdition.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Cars</h1>
<a asp-page="./Create">Add a new car</a>
<p></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].NoOfSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Color)
            </th>
             @if (Model.isAdmin != null)
            {
                <th colspan="3">
                    Admin
                </th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                <a asp-page="./Image" asp-route-ImageLink="@item.ImageLink">Picture</a>
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
            <td>
                <a asp-page="../Bookings/Create" asp-route-id="@item.ID" asp-route-make="@item.Make" asp-route-model="@item.Model">Book</a>
            </td>
                @if (Model.isAdmin != null)
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                }
        </tr>
    }
    </tbody>
</table>
