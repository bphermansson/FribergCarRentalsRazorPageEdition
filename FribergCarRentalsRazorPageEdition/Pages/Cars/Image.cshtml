@page "{ImageLink}"
@using System.Web
@model FribergCarRentalsRazorPageEdition.Pages.Cars.ImageModel
@{
    ViewData["Title"] = "Image";
}
@{
    if (@Model.ImageLink.Length > 5 )
    {
        string[] isItALink = Model.ImageLink.Split(':');
        if (isItALink[0] == "http" || isItALink[0] == "https")
        {
            <a href="@HttpUtility.UrlDecode(Model.ImageLink)">Link to car picture</a>
        }
        else
        {
            <img src="/images/@Model.ImageLink" alt="Car image" width="500px" />
        }
    }
    else
    {
        <p>No image available</p>
    }
}

