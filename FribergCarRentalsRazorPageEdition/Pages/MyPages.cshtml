@page
@model MyPagesModel
@{
}

<h4>Login</h4>
<hr />
<div class="row" style="display: @Model.LoginVisibility;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="login.Username" class="control-label"></label>
                <input asp-for="login.Username" class="form-control" />
                <span asp-validation-for="login.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="login.Password" class="control-label"></label>
                <input asp-for="login.Password" class="form-control" />
                <span asp-validation-for="login.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
