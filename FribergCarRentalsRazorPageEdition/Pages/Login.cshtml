@page
@model MyPagesModel
@{
}

<h4>Login</h4>
<h4>@TempData["Message"]</h4>

<hr />
<table>
    <tr>
        <th>
             Logga in
        </th>
        <th>
            Registrera ny användare
        </th>
    </tr>
    <tr>
        <td>
                <div class="col-md-4">
                    @await Html.PartialAsync("_PartialLogin.cshtml")
                </div>
        </td>
        <td>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.Email" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.Email" class="form-control" />
                            <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.Password" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.Password" class="form-control" />
                            <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.FirstName" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.FirstName" class="form-control" />
                            <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.LastName" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.LastName" class="form-control" />
                            <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.Address" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.Address" class="form-control" />
                            <span asp-validation-for="UserModel.Address" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.PostalCode" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.PostalCode" class="form-control" />
                            <span asp-validation-for="UserModel.PostalCode" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.City" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.City" class="form-control" />
                            <span asp-validation-for="UserModel.City" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.Country" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.Country" class="form-control" />
                            <span asp-validation-for="UserModel.Country" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="desc">
                            <label asp-for="UserModel.PhoneNumber" class="control-label"></label>
                    </td>
                    <td class="inp">
                            <input asp-for="UserModel.PhoneNumber" class="form-control" />
                            <span asp-validation-for="UserModel.PhoneNumber" class="text-danger"></span>
                    </td>
                </tr>
                    <tr>
                        <td class="desc">
                        </td>
                        <td class="inp">
                            <input type="submit" value="Register" class="btn btn-primary" asp-page-handler="Register" />
                        </td>
                    </tr>
            </table>
            </form>
            </div>
            </div>
        </td>
    </tr>
</table>

<div class="row" style="display: @Model.LoggedInMessage;">
    @if (Model != null && Model.User != null )
    {
        <p>You are logged in as @Model.Email</p>
    }
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
