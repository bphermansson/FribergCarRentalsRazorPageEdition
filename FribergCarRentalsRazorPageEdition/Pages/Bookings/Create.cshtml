@page
@model FribergCarRentalsRazorPageEdition.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Boka @Model.Make @Model.Model</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="Booking.Customer" class="control-label"></label>
                <input asp-for="Booking.Customer" class="form-control" />
                <span asp-validation-for="Booking.Customer" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Booking.CustomerEmail" class="control-label"></label>
                <input asp-for="Booking.CustomerEmail" class="form-control" />
                <span asp-validation-for="Booking.CustomerEmail" class="text-danger"></span>
            </div>
            <p>@ViewData["user"]</p>
            <div class="form-group">
                <label asp-for="Booking.StartDate" class="control-label"></label>
                <input asp-for="Booking.StartDate" type="date" data-val="true" class="form-control" />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.StopDate" class="control-label"></label>
                <input asp-for="Booking.StopDate" type="date" data-val="true" class="form-control" />
                <span asp-validation-for="Booking.StopDate" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Booking.CarId" class="control-label"></label>
                <input asp-for="Booking.CarId" class="form-control" />
                <span asp-validation-for="Booking.CarId" class="text-danger"></span>
            </div> 
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="hidden" asp-for="Booking.CarId" />
                <input type="hidden" asp-for="Booking.BookingDate" value=@Model.Date />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
